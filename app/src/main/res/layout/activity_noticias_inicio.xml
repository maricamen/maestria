<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maricarmen.app_aventos.noticiasInicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sistema de Levantamiento de Campos y Difusión de Eventos Naturales"
        android:id="@+id/textView3"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:textColor="#ff181818"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meteorológico"
        android:id="@+id/btn_met"
        android:clickable="true"
        android:background="#ff06b9ff"
        android:onClick="btnlevantamiento_Click"
        android:layout_alignTop="@+id/btn_sis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sísmico"
        android:id="@+id/btn_sis"
        android:clickable="true"
        android:background="#ff06b9ff"
        android:onClick="btnlevantamiento_Click"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volcánico"
        android:id="@+id/btn_vol"
        android:clickable="true"
        android:background="#ff06b9ff"
        android:onClick="btnlevantamiento_Click"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/btn_met"
        android:layout_alignRight="@+id/btn_met"
        android:layout_alignEnd="@+id/btn_met" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manuales"
        android:id="@+id/btn_manuales"
        android:layout_alignTop="@+id/btn_vol"
        android:layout_alignLeft="@+id/btn_sis"
        android:layout_alignStart="@+id/btn_sis"
        android:background="#ff06b9ff" />

</RelativeLayout>
