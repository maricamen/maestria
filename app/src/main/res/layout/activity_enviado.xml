<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maricarmen.app_aventos.enviado">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tu levantamiento de campo ha sido enviado, gracias."
        android:id="@+id/textView2"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:textColor="#ff181818"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="156dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:id="@+id/btn_inicioe"
        android:background="#ff059eff"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_alignTop="@+id/bto_salire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/bto_salire"
        android:background="#ff059eff"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/btn_inicioe"
        android:layout_toEndOf="@+id/btn_inicioe"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="86dp"
        android:onClick="btnSalirE_Click" />
</RelativeLayout>
